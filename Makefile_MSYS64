# Makefile for MSYS64

SRC_DIR := src
OBJ_DIR := obj
BIN_DIR := bin

EXE := $(BIN_DIR)/image_processor
SRC := $(wildcard $(SRC_DIR)/*.c)
OBJ := $(SRC:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)

CC := C:/msys64/mingw64/bin/gcc.exe
INCLUDE := -Iinclude
GTKINCLUDE := $$(PKG_CONFIG_PATH=C:/msys64/mingw64/lib/pkgconfig pkg-config --cflags gtk+-3.0)
CPPFLAGS := -MMD -MP
CFLAGS := -Wall -Werror -pedantic -ansi 
GTKLIBS := $$(PKG_CONFIG_PATH=C:/msys64/mingw64/lib/pkgconfig pkg-config --libs gtk+-3.0)
LDLIBS := -lm

.PHONY: all clean

all: $(EXE)

$(EXE): $(OBJ) | $(BIN_DIR)
	$(CC) $(GTKINCLUDE) $^ -o $@ $(GTKLIBS)

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c | $(OBJ_DIR)
	$(CC) --static $(CPPFLAGS) $(CFLAGS) -c -std=c99 $(INCLUDE) $(GTKINCLUDE) $< -o $@ $(LDLIBS) $(GTKLIBS)

$(BIN_DIR) $(OBJ_DIR):
	mkdir -p $@

clean:
	@$(RM) -rv $(EXE) $(OBJ_DIR)
	
-include $(OBJ:.o=.d)